<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <%- include('navbar', {links: links}) %>

    <form
      method="POST"
      action="<%=category?'/category/'+categoryId+'/update':'/category/create'%>"
    >
      <h1><%=title%></h1>

      <div>
        <label for="category">Category Name:</label>
        <input
          type="text"
          id="category"
          name="category"
          value="<%=category?category:''%>"
          required
        />
      </div>

      <button type="submit">Submit</button>
    </form>
  </body>
</html>
