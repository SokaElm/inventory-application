<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <%- include('navbar', {links: links}) %>

    <form
      method="POST"
      action="<%=item?'/item/'+item.id+'/update':'/item/create'%>"
    >
      <h1><%=title%></h1>

      <div>
        <label for="title">Name:</label>
        <input
          type="text"
          id="title"
          name="title"
          value="<%=item?item.title:''%>"
          required
        />
      </div>
      <div>
        <label for="img">Image link:</label>
        <input type="text" id="img" name="img" value="<%=item?item.img:''%>" />
      </div>
      <div>
        <label for="brand">Brand:</label>
        <input
          type="text"
          id="brand"
          name="brand"
          value="<%=item?item.brand:''%>"
        />
      </div>
      <div>
        <label for="stock">Quantity:</label>
        <input
          type="integer"
          id="stock"
          name="stock"
          value="<%=item?item.stock:''%>"
          required
        />
      </div>
      <div>
        <label for="price">Price:</label>
        <input
          type="number"
          step="0.01"
          min="0"
          id="price"
          name="price"
          value="<%=item?item.price:''%>"
          required
        />
      </div>
      <label for="category">Category:</label>
      <select name="category" required>
        <% if (item) {%>
        <option value="<%=itemCategory%>"><%=itemCategory%></option>
        <%} else { %>
        <option value="" disabled selected>--Please choose an option--</option>
        <%} %> <% categories.forEach(category => { %> <% if (!item || category
        !== itemCategory) { %>
        <option value="<%= category.category %>">
          <%= category.category %>
        </option>
        <% } %> <% }); %>
      </select>

      <button type="submit">Submit</button>
    </form>
  </body>
</html>
